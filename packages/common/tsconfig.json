{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": ["ES2020"]
  },
  "include": ["src/**/*.ts", "../server/src/engine/EventDistributor.ts"]
}
